<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_task_form_inherit_iet_plan" model="ir.ui.view">
        <field name="name">view_project_task_form_inherit_iet_plan</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='allocated_hours']" position="after">
                <field name="date_start" string="Task Date" widget="daterange"
                       options='{"end_date_field": "end_date", "always_range": true}' required="1"/>
                <field name="end_date" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
