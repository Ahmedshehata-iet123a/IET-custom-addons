<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_form_inherit_iet_plan" model="ir.ui.view">
        <field name="name">project.project.form.iet.project.plan</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_generate_tasks"
                        string="Generate Tasks"
                        type="object"
                        class="btn-primary"/>
                <button name="action_print_project_plan"
                        type="object"
                        string="Export Project Plan"
                        class="btn-primary"
                        icon="fa-download"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="project_plan" string="Project Plan">
                    <field name="project_plan_line_ids">
                        <list editable="bottom">
                            <control>
                                <create name="add_product_control" string="Add a Task"/>
                                <create name="add_section_control" string="Add a Milestone"
                                        context="{'default_display_type': 'line_section'}"/>
                            </control>
                            <field name="display_type" column_invisible="True"/>
                            <field name="name" required="1"/>
                            <field name="planned_start_date" required="display_type != 'line_section'"
                                   invisible="display_type == 'line_section'"/>
                            <field name="actual_start_date" invisible="display_type == 'line_section'"/>
                            <field name="planned_end_date" required="display_type != 'line_section'"
                                   invisible="display_type == 'line_section'"/>
                            <field name="actual_end_date" invisible="display_type == 'line_section'"/>
                            <field name="task_owner" invisible="display_type == 'line_section'"/>
                            <field name="status" invisible="display_type == 'line_section'"/>
                            <field name="comments" invisible="display_type == 'line_section'"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
