<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_coach_timesheet_wizard_form" model="ir.ui.view">
        <field name="name">coach.timesheet.wizard.form</field>
        <field name="model">coach.timesheet.wizard</field>
        <field name="arch" type="xml">
            <form string="View Employee Timesheet">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_check_employee_user_link"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-link"
                                string="Check Link"/>
                    </div>

                    <group>
                        <group>
                            <field name="current_coach_id" invisible="1"/>
                            <field name="search_by" widget="radio" invisible="1"/>
                            <field name="employee_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="total_hours" widget="float_time"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Timesheets">
                            <field name="timesheet_ids" nolabel="1">
                                <list string="Timesheet Entries"
                                      decoration-muted="unit_amount == 0">
                                    <field name="date"/>
                                    <field name="project_id"/>
                                    <field name="task_id"/>
                                    <field name="name"/>
                                    <field name="unit_amount"
                                           string="Hours"
                                           widget="float_time"
                                           sum="Total Hours"/>
                                </list>
                            </field>
                        </page>
                       <!-- <page string="Debug Info">-->
                           <!-- <field name="debug_info" nolabel="1" widget="text"/>-->
                       <!-- </page>-->
<!--                        <page string="Debug Info" invisible="1">-->
<!--                            <field name="debug_info" nolabel="1" widget="text"/>-->
<!--                        </page>-->
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_view_timesheets"
                            string="Open Full View"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_coach_timesheet_wizard" model="ir.actions.act_window">
        <field name="name">View Employee Timesheets</field>
        <field name="res_model">coach.timesheet.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
    </record>

</odoo>