<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Record Rule -->
    <record id="rule_timesheet_coach_access" model="ir.rule">
        <field name="name">Coach can see employee timesheets</field>
        <field name="model_id" ref="account.model_account_analytic_line"/>
        <field name="groups" eval="[(4, ref('iet_coach_timesheet_access.my_team_time_sheet'))]"/>
        <field name="domain_force">
            ['|',
                ('employee_id.user_id', '=', user.id),
                ('employee_id.coach_id.user_id', '=', user.id),
                ('employee_id.parent_id.user_id', '=', user.id)
            ]
        </field>
    </record>

</odoo>
