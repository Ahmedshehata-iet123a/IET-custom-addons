<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_task_form_inherit_iet_plan" model="ir.ui.view">
        <field name="name">view_project_task_form_inherit_iet_plan</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="date_start" string="Task Date" widget="daterange"
                       options='{"end_date_field": "end_date", "always_range": true}'/>
                <field name="end_date" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="before">
                <field name="team_name"/>
            </xpath>
        </field>
    </record>
    <record id="view_project_task_kanban_inherit_iet_plan" model="ir.ui.view">
        <field name="name">view_project_task_kanban_inherit_iet_plan</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_deadline']" position="replace">
                <field t-if="record.date_start.raw_value" invisible="state in ['1_done', '1_canceled']"
                       name="date_start" widget="remaining_days"/>
            </xpath>
        </field>
    </record>


</odoo>
