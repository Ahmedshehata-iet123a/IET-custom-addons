<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_form_inherit_iet_plan" model="ir.ui.view">
        <field name="name">project.project.form.iet.project.plan</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="scope_ids" widget="many2many_tags"/>
                <field name="completion_percent" readonly="1"/>
            </xpath>
            <xpath expr="//form" position="inside">
                <field name="hide_button"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_generate_tasks"
                        string="Generate Tasks"
                        type="object"
                        class="btn-primary"
                        invisible="hide_button == True"/>
                <button name="action_update_tasks"
                        string="Update Tasks"
                        type="object"
                        class="btn-primary"
                        invisible="hide_button == False"/>
                <button name="action_print_project_plan"
                        type="object"
                        string="Export Project Plan"
                        class="btn-primary"
                        icon="fa-download"/>
                <button name="action_import_project_plan"
                        type="object"
                        string="Import Project Plan"
                        class="btn-primary"
                        icon="fa-upload"/>
            </xpath>
            <xpath expr="//page[@name='settings']" position="inside">
                <group string="Schedule Thresholds">
                    <group>
                        <field name="all_delay_days"/>
                        <field name="threshold_on_track"/>
                        <field name="threshold_at_risk"/>
                        <field name="threshold_delayed"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="project_plan" string="Project Plan"
                      groups="project.group_project_user,project.group_project_manager">
                    <field name="project_plan_line_ids">
                        <list editable="bottom" decoration-bf="display_type == 'line_section'"
                              decoration-info="display_type == 'line_section'">

                            <field name="sequence" widget="handle"/>

                            <control>
                                <create name="add_product_control" string="Add a Task"/>
                                <create name="add_section_control" string="Add a Milestone"
                                        context="{'default_display_type': 'line_section'}"/>
                            </control>

                            <field name="display_type" column_invisible="True"/>
                            <field name="name" required="1"/>
                            <field name="milestone_type" invisible="display_type != 'line_section'"/>
                            <field name="milestone_weight" invisible="display_type != 'line_section'"/>
                            <field name="planned_start_date"/>
                            <field name="milestone_id" column_invisible="1"/>
                            <field name="actual_start_date"/>
                            <field name="task_id" column_invisible="1"/>
                            <field name="planned_end_date"/>
                            <field name="actual_end_date"/>
                            <field name="delay_days" column_invisible="1" readonly="1"/>
                            <field name="task_owner" invisible="display_type == 'line_section'"/>
                            <field name="status_done"/>
                            <field name="status" column_invisible="1" invisible="display_type == 'line_section'"/>
                            <field name="comments" invisible="display_type == 'line_section'"/>
                            <field name="planned_duration"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
