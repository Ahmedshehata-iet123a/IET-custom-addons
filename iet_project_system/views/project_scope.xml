<odoo>
    <record id="project_scope_view_form" model="ir.ui.view">
        <field name="name">project_scope_view_form</field>
        <field name="model">project.scope</field>
        <field name="arch" type="xml">
            <form string="_form">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <record id="project_scope_action" model="ir.actions.act_window">
        <field name="name">Project Scope</field>
        <field name="res_model">project.scope</field>
        <field name="view_mode">list,form</field>
    </record>
      <menuitem
            id="menu_project_scope"
            name="Project Scope"
            parent="project.menu_project_config"
            action="project_scope_action"
            sequence="10"/>
</odoo>