<odoo>
    <record id="milestone_type_view_form" model="ir.ui.view">
        <field name="name">milestone_type_view_form</field>
        <field name="model">milestone.type</field>
        <field name="arch" type="xml">
            <form string="form">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <record id="milestone_type_action" model="ir.actions.act_window">
        <field name="name">Milestone Type</field>
        <field name="res_model">milestone.type</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem
            id="menu_milestone_type"
            name="Milestone Type"
            parent="project.menu_project_config"
            action="milestone_type_action"
            sequence="10"/>
</odoo>