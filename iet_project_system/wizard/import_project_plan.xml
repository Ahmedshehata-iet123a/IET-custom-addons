<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_project_import_plan_wizard" model="ir.ui.view">
        <field name="name">project.import.plan.form</field>
        <field name="model">project.import.plan</field>
        <field name="arch" type="xml">
            <form string="Import Project Plan">
                <group>
                    <field name="project_id" invisible="1"/>
                    <field name="excel_file" filename="filename"/>
                    <field name="filename" invisible="1"/>
                </group>
                <footer>
                    <button name="action_import_plan"
                            string="Import Project Plan"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_import_project_plan_wizard" model="ir.actions.act_window">
        <field name="name">Import Project Plan</field>
        <field name="res_model">project.import.plan</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_project_id': active_id}</field>

    </record>


</odoo>