<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="edit_project_inherit_payment" model="ir.ui.view">
        <field name="name">project.project.form.inherit.payment</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_payments" type="object" class="oe_stat_button" icon="fa-money" groups="project.group_project_manager" invisible="payment_count == 0">
                    <field name="payment_count" widget="statinfo" string="Payments" />
                </button>
            </div>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="users_number" />
            </xpath>
        </field>
    </record>
</odoo>