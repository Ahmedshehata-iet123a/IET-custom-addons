<odoo>
    <!-- FORM View -->
    <record id="view_project_industry_form" model="ir.ui.view">
        <field name="name">project.industry.form</field>
        <field name="model">project.industry</field>
        <field name="arch" type="xml">
            <form string="Industry">
                <sheet>
                    <group>
                        <h1>
                            <field name="name" placeholder="Industry name is required"/>
                        </h1>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- list View -->
    <record id="view_project_industry_list" model="ir.ui.view">
        <field name="name">project.industry.list</field>
        <field name="model">project.industry</field>
        <field name="arch" type="xml">
            <list string="Industries">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_project_industry" model="ir.actions.act_window">
        <field name="name">Industries</field>
        <field name="res_model">project.industry</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- SUB MENU -->
    <menuitem
            id="menu_project_industry"
            name="Industry"
            parent="project.menu_project_config"
            action="action_project_industry"
            sequence="30"/>
</odoo>