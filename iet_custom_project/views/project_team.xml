<odoo>
    <!-- Form View -->
    <record id="view_project_team_form" model="ir.ui.view">
        <field name="name">project.team.form</field>
        <field name="model">project.team</field>
        <field name="arch" type="xml">
            <form string="Project Team">
                <sheet>
                    <group>
                        <h1>
                            <field name="name" placeholder="Name field is required"/>
                        </h1>
                    </group>
                    <group string="Team Members">
                        <field name="team_member_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- list View -->
    <record id="view_project_team_list" model="ir.ui.view">
        <field name="name">project.team.list</field>
        <field name="model">project.team</field>
        <field name="arch" type="xml">
            <list string="Project Teams">
                <field name="name"/>
                <field name="team_member_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_project_team" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">project.team</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first project team.
            </p>
        </field>
    </record>

    <!-- Submenu under Configuration -->
    <menuitem
            id="menu_project_team"
            name="Teams"
            parent="project.menu_project_config"
            action="action_project_team"
            sequence="10"/>
</odoo>