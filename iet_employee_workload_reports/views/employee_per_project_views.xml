<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================ -->
    <!-- PER PROJECT REPORT VIEWS -->
    <!-- ============================================================ -->

    <!-- Tree View للتقرير Per Project -->
    <record id="view_employee_per_project_report_list" model="ir.ui.view">
        <field name="name">employee.per.project.report.list</field>
        <field name="model">employee.per.project.report</field>
        <field name="arch" type="xml">
            <list string="Per Project Reports">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </list>
        </field>
    </record>

    <!-- Form View للتقرير Per Project -->
    <record id="view_employee_per_project_report_form" model="ir.ui.view">
        <field name="name">employee.per.project.report.form</field>
        <field name="model">employee.per.project.report</field>
        <field name="arch" type="xml">
            <form string="Employee Per Project Report">
                <header>
                    <button
                        name="action_generate_report"
                        string="Generate Report"
                        type="object"
                        class="oe_highlight"
                        icon="fa-calculator"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Report Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Employee Per Project" name="per_project_lines">
                            <field name="line_ids" >
                                <list
                                    decoration-danger="status=='overload'"
                                    decoration-warning="status=='under'"
                                    decoration-success="status=='normal'"
                                    create="false"
                                    delete="true">
                                    <field name="employee_id"/>
                                    <field name="project_id"/>
                                    <field name="department_id" optional="show"/>
                                    <field name="job_id" optional="hide"/>
<!--                                    <field name="capacity_hours" sum="Total Capacity"/>-->
                                    <field name="assigned_hours" sum="Total Assigned"/>
                                    <field name="load_percentage" widget="progressbar" column_invisible="1"/>
                                    <field name="status" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View للتقرير Per Project -->
    <record id="view_employee_per_project_report_search" model="ir.ui.view">
        <field name="name">employee.per.project.report.search</field>
        <field name="model">employee.per.project.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <filter string="Current Month" name="current_month"
                        domain="[('date_from','&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                ('date_to','&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Month" name="last_month"
                        domain="[('date_from','&gt;=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')),
                                ('date_to','&lt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Month" name="group_by_month" context="{'group_by': 'date_from:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree View لسطور Per Project -->
    <record id="view_employee_per_project_line_list" model="ir.ui.view">
        <field name="name">employee.per.project.report.line.list</field>
        <field name="model">employee.per.project.report.line</field>
        <field name="arch" type="xml">
            <list
                decoration-danger="status=='overload'"
                decoration-warning="status=='under'"
                decoration-success="status=='normal'"
                create="false"
                edit="false">
                <field name="employee_id"/>
                <field name="project_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
<!--                <field name="capacity_hours" sum="Total Capacity"/>-->
                <field name="assigned_hours" sum="Total Assigned"/>
                <field name="load_percentage" widget="progressbar" column_invisible="1"/>
                <field name="status" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Graph View للـ Per Project -->
    <record id="view_employee_per_project_line_graph" model="ir.ui.view">
        <field name="name">employee.per.project.report.line.graph</field>
        <field name="model">employee.per.project.report.line</field>
        <field name="arch" type="xml">
            <graph string="Per Project Analysis" type="bar" sample="1">
                <field name="employee_id"/>
                <field name="project_id" type="col"/>
                <field name="assigned_hours" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View للـ Per Project -->
    <record id="view_employee_per_project_line_pivot" model="ir.ui.view">
        <field name="name">employee.per.project.report.line.pivot</field>
        <field name="model">employee.per.project.report.line</field>
        <field name="arch" type="xml">
            <pivot string="Per Project Pivot" sample="1">
                <field name="employee_id" type="row"/>
                <field name="project_id" type="col"/>
                <field name="assigned_hours" type="measure"/>
                <field name="load_percentage" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Search View للسطور Per Project -->
    <record id="view_employee_per_project_line_search" model="ir.ui.view">
        <field name="name">employee.per.project.report.line.search</field>
        <field name="model">employee.per.project.report.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="project_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <filter string="Overload" name="overload" domain="[('status', '=', 'overload')]"/>
                <filter string="Normal" name="normal" domain="[('status', '=', 'normal')]"/>
                <filter string="Under" name="under" domain="[('status', '=', 'under')]"/>
                <separator/>
                <filter string="High Load (>90%)" name="high_load" domain="[('load_percentage', '&gt;', 90)]"/>
                <filter string="Low Load (&lt;60%)" name="low_load" domain="[('load_percentage', '&lt;', 60)]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Department" name="group_by_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Job Position" name="group_by_job" context="{'group_by': 'job_id'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action للتقرير Per Project -->
    <record id="action_employee_per_project_report" model="ir.actions.act_window">
        <field name="name">Per Project Reports</field>
        <field name="res_model">employee.per.project.report</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_current_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first per project report
            </p>
            <p>
                Track employee workload per project.<br/>
                Shows each employee's hours distribution across different projects.
            </p>
        </field>
    </record>

    <!-- Action للتحليل Per Project -->
    <record id="action_employee_per_project_analysis" model="ir.actions.act_window">
        <field name="name">Per Project Analysis</field>
        <field name="res_model">employee.per.project.report.line</field>
        <field name="view_mode">list,graph,pivot</field>
        <field name="context">{'search_default_group_by_project': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No per project data available
            </p>
            <p>
                Generate a per project report first to see the analysis.
            </p>
        </field>
    </record>

</odoo>