<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View للتقرير الرئيسي -->
    <record id="view_employee_workload_report_list" model="ir.ui.view">
        <field name="name">employee.workload.report.list</field>
        <field name="model">employee.workload.report</field>
        <field name="arch" type="xml">
            <list string="Workload Reports">
                <field name="name"/>
                <field name="project_ids" widget="many2many_tags"/>
                <field name="employee_id"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Form View للتقرير الرئيسي -->
    <record id="view_employee_workload_report_form" model="ir.ui.view">
        <field name="name">employee.workload.report.form</field>
        <field name="model">employee.workload.report</field>
        <field name="arch" type="xml">
            <form string="Employee Workload Report">
                <header>
                    <button
                            name="action_generate_report"
                            string="Generate Report"
                            type="object"
                            class="oe_highlight"
                            icon="fa-calculator"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Report Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="employee_id" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Workload Lines" name="workload_lines">
                            <field name="line_ids">
                                <list
                                        decoration-bf="is_project_line"
                                        create="false"
                                        delete="true"
                                        editable="bottom">
                                    <field name="is_project_line" column_invisible="1"/>
                                    <field name="project_id" readonly="1" invisible="not is_project_line"/>
                                    <field name="employee_id" readonly="1" invisible="is_project_line"/>
                                    <field name="department_id" optional="show" readonly="1"
                                           invisible="is_project_line"/>
                                    <field name="assigned_hours" sum="Total Assigned" widget="float_time" readonly="1"
                                           invisible="is_project_line"/>

                                    <field name="planned_duration" readonly="1" invisible="not is_project_line"/>
                                    <field name="days_passed" readonly="1" invisible="not is_project_line"/>
                                    <field name="expected_progress" readonly="1" invisible="not is_project_line"/>
                                    <field name="actual_progress" readonly="1" invisible="not is_project_line"/>
                                    <field name="delay_days" readonly="1" invisible="not is_project_line"/>
                                    <field name="project_stage_id" readonly="1" invisible="not is_project_line"/>
                                    <field name="schedule_status" widget="badge"
                                           decoration-success="schedule_status == 'on_track'"
                                           decoration-warning="schedule_status == 'at_risk'"
                                           decoration-danger="schedule_status == 'delayed'"
                                           readonly="1" invisible="not is_project_line"/>

                                    <field name="load_percentage" widget="progressbar" readonly="1" column_invisible="1"/>
                                    <field name="status" readonly="1" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_employee_workload_report_search" model="ir.ui.view">
        <field name="name">employee.workload.report.search</field>
        <field name="model">employee.workload.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="project_ids"/>
                <group expand="0" string="Group By">
                    <filter string="Projects" name="group_by_project" context="{'group_by': 'project_ids'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- Tree View لسطور التقرير -->
    <record id="view_employee_workload_line_list" model="ir.ui.view">
        <field name="name">employee.workload.report.line.list</field>
        <field name="model">employee.workload.report.line</field>
        <field name="arch" type="xml">
            <list
                    decoration-danger="status=='overload'"
                    decoration-warning="status=='under'"
                    decoration-success="status=='normal'"
                    create="false"
                    edit="false">
                <field name="employee_id"/>
                <field name="project_id"/>
                <field name="project_stage_id" optional="show"/>
                <!-- Schedule Control -->
                <field name="planned_duration" optional="show"/>
                <field name="days_passed" optional="show"/>
                <field name="expected_progress" widget="percentage" optional="show"/>
                <field name="actual_progress" widget="percentage" optional="show"/>
                <field name="delay_days" optional="show"/>
                <field name="schedule_status" widget="badge"
                       decoration-success="schedule_status == 'on_track'"
                       decoration-warning="schedule_status == 'at_risk'"
                       decoration-danger="schedule_status == 'delayed'" optional="show"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <!--                <field name="capacity_hours" sum="Total Capacity"/>-->
                <field name="assigned_hours" sum="Total Assigned"/>
                <field name="load_percentage" widget="progressbar" column_invisible="1"/>
                <field name="status" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_employee_workload_line_graph" model="ir.ui.view">
        <field name="name">employee.workload.report.line.graph</field>
        <field name="model">employee.workload.report.line</field>
        <field name="arch" type="xml">
            <graph string="Workload Analysis" type="bar" sample="1">
                <field name="employee_id"/>
                <!--                <field name="capacity_hours" type="measure"/>-->
                <field name="assigned_hours" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_employee_workload_line_pivot" model="ir.ui.view">
        <field name="name">employee.workload.report.line.pivot</field>
        <field name="model">employee.workload.report.line</field>
        <field name="arch" type="xml">
            <pivot string="Workload Pivot" sample="1">
                <field name="employee_id" type="row"/>
                <field name="department_id" type="row"/>
                <!--                <field name="capacity_hours" type="measure"/>-->
                <field name="assigned_hours" type="measure"/>
                <field name="load_percentage" type="measure" column_invisible="1"/>
            </pivot>
        </field>
    </record>

    <!-- Search View للسطور -->
    <record id="view_employee_workload_line_search" model="ir.ui.view">
        <field name="name">employee.workload.report.line.search</field>
        <field name="model">employee.workload.report.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="project_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <filter string="Overload" name="overload" domain="[('status', '=', 'overload')]"/>
                <filter string="Normal" name="normal" domain="[('status', '=', 'normal')]"/>
                <filter string="Under" name="under" domain="[('status', '=', 'under')]"/>
                <separator/>
                <filter string="High Load (>90%)" name="high_load" domain="[('load_percentage', '&gt;', 90)]"/>
                <filter string="Low Load (&lt;60%)" name="low_load" domain="[('load_percentage', '&lt;', 60)]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Department" name="group_by_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Job Position" name="group_by_job" context="{'group_by': 'job_id'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action للتقارير -->
    <record id="action_employee_workload_report" model="ir.actions.act_window">
        <field name="name">Workload Reports</field>
        <field name="res_model">employee.workload.report</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_current_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first workload report
            </p>
            <p>
                Track employee workload by generating monthly reports.
                <br/>
                The system calculates capacity hours (working days - leaves) and compares with assigned hours from
                timesheets.
            </p>
        </field>
    </record>

    <!-- Action للتحليل -->
    <record id="action_employee_workload_analysis" model="ir.actions.act_window">
        <field name="name">Workload Analysis</field>
        <field name="res_model">employee.workload.report.line</field>
        <field name="view_mode">list,graph,pivot</field>
        <field name="context">{'search_default_group_by_department': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No workload data available
            </p>
            <p>
                Generate a workload report first to see the analysis.
            </p>
        </field>
    </record>

    <!-- Menu الرئيسي -->

</odoo>